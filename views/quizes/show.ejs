<form method="get" action="/quizes/<%= quiz.id %>/answer">
    Pregunta de <%= quiz.tema %>: <%= quiz.pregunta %> <p>
    <input type="text" name="respuesta" value="Respuesta" />
    <input type="submit" value="Enviar">
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo Comentario</button></a></p>

<p><strong>Comentarios:</strong></p>
<%for (var c=0; c<quiz.comments.length; c++) {%>
  <% if (quiz.comments[c].publicado || session.user) {%>
      <p>- <%=quiz.comments[c].texto%>
      <% if (session.user && !quiz.comments[c].publicado) {%>
          <a href="/quizes/<%= quiz.id %>/comments/<%=quiz.comments[c].id%>/publish">
            <button>Publicar</button>
          </a>
      <%}%>
      </p>
  <%}%>
<%}%>
